<meta charset="UTF-8">

<h1>CALCULAR LA MEDIA DE LAS EDADES DE UNA FAMILIA :D</h1>

<script>

    function saltarlinea() {

        document.write("<br>");
        document.write("<br>");
    }

    function imprimir(frase){
        document.write(frase)
        saltarlinea();
    }
 

 //Tener cuidado en que todas las inicializaciones de variables deben estar fuera del While para evitar errores :)

 
    var numeroMiembros = parseInt(prompt("Ingrese la cantidad de miembros que tiene su familia: "));
    var contador = 1;
    var totalEdades = 0;
    while (contador <= numeroMiembros){

        
        edad = parseInt(prompt("Ingrese la edad del familiar: "));
        totalEdades = totalEdades + edad;
        contador++;
    }

    mediaEdades = totalEdades / numeroMiembros;

    imprimir("La media de las edades de la familia es: " + mediaEdades);
    imprimir("FIN :)");



</script>
