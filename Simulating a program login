<script>

    function saltarlinea() {

        document.write("<br>");
        document.write("<br>");
    }

    function imprimir(frase){
        document.write(frase)
        saltarlinea();
    }
 
    for (var lineas = 1; lineas <= 3; lineas++) {

        for (var columnas = 1; columnas <= 10; columnas++){
            
            document.write("*");
        }

        saltarlinea();
        
    }
        

    imprimir("Fin :D");

    //este es un ejemplo para un inicio de sesi칩n de un programa

    var inicioDeSesionRegistrado = "petite";
    var contrasenhaRegistrada = "contrasenha123";


    var intentos = 3;
    var contador = 1;


    while (contador <= intentos){
        var inicioDeSesionIngresado = prompt("Ingrese su usuario");
        var contrasenhaIngresada = prompt("Ingrese su contrase침a");
        contador++;
       
        if( inicioDeSesionRegistrado == inicioDeSesionIngresado && contrasenhaRegistrada == contrasenhaIngresada ) {
        alert("Bienvenido al sistema " + inicioDeSesionIngresado);
                break;
        }  

        else {
            
            alert("inicio de sesi칩n inv치lido. Favor intente de nuevo :( ");      

        }

        

    }

</script>
