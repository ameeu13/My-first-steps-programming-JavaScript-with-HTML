<h1>MUNDIALES DE LA FIFA</h1>

<script>

    function saltarlinea() {

        document.write("<br>");
        document.write("<br>");
    }

    function imprimir(frase){
        document.write(frase)
        saltarlinea();
    }
 
    var anhoMundial = 1930;
    var limite = parseInt(prompt("Ingrese el año límite para calcular en que años hubo munidales de la FIFA: "));

    alert("El primer mundial de la FIFA fué en el año: " + anhoMundial);

    while (anhoMundial <= limite){
        
    imprimir("Hubo mundial de la FIFA en el año " + anhoMundial);
    anhoMundial = anhoMundial + 4;

    }

    imprimir("fin");

</script>
